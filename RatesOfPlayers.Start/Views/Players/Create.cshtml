@using RatesOfPlayers.Infrastructure.Web.Players.Enums
@model RatesOfPlayers.Infrastructure.Web.Players.ViewModels.CreatePlayerViewModel

@{
    ViewData["Title"] = "Новый игрок";
}

<h1>Новый игрок</h1>

<h4>Создание нового игрока</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" 
                        asp-items="Html.GetEnumSelectList<PlayerStatusForView>()" 
                        class="form-control">
                    <option value="">Укажите статус</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">К списку</a>
</div>

